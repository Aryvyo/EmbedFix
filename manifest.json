{
    "manifest_version": 3,
    "name": "EmbedFix",
    "version": "1.0",
    "description": "Fixes embeds for social media sharing links!",
    "permissions": ["tabs", "activeTab", "scripting","clipboardWrite"],
    "host_permissions": [
        "https://twitter.com/*",
        "https://*.twitter.com/*",
        "https://x.com/*",
        "https://*.x.com/*"
      ],
      "content_scripts": [
        {
          "matches": [
            "https://twitter.com/*",
            "https://*.twitter.com/*",
            "https://x.com/*",
            "https://*.x.com/*"
          ],
        "js": ["content/content.js"]
      }
    ]
  }
  