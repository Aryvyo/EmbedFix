{
    "manifest_version": 3,
    "name": "EmbedFix",
    "version": "1.0",
    "description": "Fixes embeds for social media sharing links!",
    "permissions": ["tabs", "activeTab","clipboardWrite"],
      "content_scripts": [
        {
          "matches": [
            "https://twitter.com/*",
            "https://*.twitter.com/*",
            "https://x.com/*",
            "https://*.x.com/*",
            "https://instagram.com/*"
          ],
        "js": ["content/content.js"]
      }
    ],
    "action": {
      "default_popup": "popup/popup.html"
    },
    "icons": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  }
  